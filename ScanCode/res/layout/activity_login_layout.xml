<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <EditText
        android:id="@+id/activity_login_et_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_input_bg"
        android:hint="手机号"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/text_deep"
        android:textColorHint="@color/text_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/activity_login_et_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_input_bg"
        android:hint="密码"
        android:paddingLeft="10dp"
        android:password="true"
        android:textColor="@color/text_deep"
        android:textColorHint="@color/text_light"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_line" >

        <CheckBox
            android:id="@+id/activity_login_cb_remember"
            style="@style/normal_Radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:checked="false"
            android:text="记住我"
            android:textColor="@color/text_deep"
            android:textSize="17sp" />
    </LinearLayout>

    <Button
        android:id="@+id/activity_login_bt_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_btn_green_normal"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_line" >

        <TextView
            android:id="@+id/activity_login_tv_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:text="找回密码"
            android:textColor="@color/text_deep"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_login_tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="注册新会员"
            android:textColor="@color/text_deep"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>