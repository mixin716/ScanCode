<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <EditText
        android:id="@+id/activity_register_et_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_input_bg"
        android:hint="手机号"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/text_deep"
        android:textColorHint="@color/text_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/activity_register_bt_checkCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_btn_green_normal"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/activity_register_et_checkCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_input_bg"
        android:hint="请输入验证码"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/text_deep"
        android:textColorHint="@color/text_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/activity_register_et_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_input_bg"
        android:hint="密码6-16位数字或字符"
        android:paddingLeft="10dp"
        android:password="true"
        android:textColor="@color/text_deep"
        android:textColorHint="@color/text_light"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_line"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="性别："
            android:textColor="@color/text_deep"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/activity_register_rb_sex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/activity_register_rb_man"
                style="@style/normal_Radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="男"
                android:textColor="@color/text_deep"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/activity_register_rb_woman"
                style="@style/normal_Radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="女"
                android:textColor="@color/text_deep"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/activity_login_bt_register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_btn_green_normal"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_line"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_login_tv_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="注册视为同意"
            android:textColor="@color/text_deep"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_login_tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="(码乐网协议)。"
            android:textColor="#0738a8"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>